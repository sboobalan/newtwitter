<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Text</th>
      <th>Status</th>
      <th>Approvedby</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 

     <% @tweets.each do |tweet| %>
      <tr >
	<td><%= tweet.username %></td>
        <td><%= tweet.text %></td>
        <td><span id="<%= tweet.id %>"><%= tweet.status %></span></td>
        <td><%= link_to 'Active', tweet_set_stat_path(tweet,:active),remote: true,id: :active %></td>
        <td><%= link_to 'Inactive', tweet_set_stat_path(tweet,:inactive),remote: true,id: :inactive %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
