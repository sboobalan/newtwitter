



<%= form_with(model: user, local: true, id: :form1) do |form| %>
  

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, :required => true%>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username, :required => true%>
    
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password ,:required => true%>
  </div>

  <div class="field">
    <%= form.label :confirm_password %>
    <%= form.password_field :confirm_password, id: :user_confirm_password,:required => true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email,:required => true %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>




